<div class="progress" id="logProgress" hidden style="height: 3px; background-color: #fff;">
	<div class="progress-bar bg-success" style=" width: 0%;" aria-valuemin="0" aria-valuenow="0" aria-valuemax="100"></div>
</div>

{{#equal submitted true}}
<h5 class="alert-info"><center>You have submitted your attendance.</center></h5>
<div class="d-flex justify-content-center align-items-center" style="margin-top: 4%">
	<div class="card" style="max-width: 230px;">
		<div class="card-header">
			<h4>Your Photo</h4>
		</div>
		<img src="/uploads/{{image}}" alt="" class="card-img-top" style="max-width: 230px; max-height: 330px">
		<div class="card-body">
			<div class="card-text">Submitted on <div>{{date}}</div><div>{{time}}</div></div>
		</div>
	</div>
</div>
{{else}}
<div class="container">
		<div class="row d-flex flex-column justify-content-center align-items-center" style="margin-top: 5%;">
			<div class="card">
				<div class="card-header">
					<h2>Upload Proof</h2>
				</div>
				<form id="uploadForm">
					<div class="form-group">
						<label>
							<input type="file" name="a_Proof" id="a_Proof" accept="image/*" style="opacity: 0; position:absolute">
							<img src="asset/Camera.png" alt="nice" id="previewImage" class="card-img-top" style="max-width: 250px; max-height: 400px;">
						</label>
					</div>
					<div class="card-footer d-flex justify-content-center">
						<button class="btn btn-primary float-right" id="proofBtn">Submit</button>
					</div>
				</form>
			</div>
		</div>
{{/equal}}
	</div>



