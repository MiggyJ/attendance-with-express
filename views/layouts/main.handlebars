<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
	{{#if missing}}
	<title>Oops! Wrong Link!</title>
	{{else}}
	{{#if admin}}
	<title>Attendance Admin</title>
	{{else}}
	<title>Attendance with ExpressJS</title>
	{{/if}}
	{{/if}}
	<link rel="stylesheet" href="plugins/bootstrap/css/bootstrap.min.css">
	<link rel="shortcut icon" href="../../favicon.ico" type="image/x-icon">
	<link rel="stylesheet" href="plugins/datatables/css/jquery.dataTables.min.css">
</head>
<body>


	<nav class="navbar navbar-dark bg-primary">
	{{#if user}}
		<h5 class="navbar-brand">Hello, {{user}}</h5>
		<ul class="navbar-nav">
			<li class="nav-item">
				<a href="/logout" class="nav-link">Log Out</a>
			</li>
		</ul>
	{{else}}
		<h2 class="navbar-brand">Attendance with ExpressJS</h2>
	{{/if}}
	</nav>

	{{{body}}}


	<!-- Resources -->
	<script src="plugins/jquery/jquery.min.js"></script>
	<script src="plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="plugins/jquery-validation/jquery.validate.min.js"></script>
	<script src="plugins/jquery-validation/additional-methods.min.js"></script>
	<script src="plugins/datatables/js/jquery.dataTables.min.js"></script>
	<script src="js/app.js"></script>
	{{{_script}}}
	<script>
	{{#if error}}
		$('#logInError .toast-body').text('Incorrect student number or password.')
		$('#logInError').toast('show')
	{{/if}}
	</script>
</body>
</html>